<div class="container mt-2">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <h2>Bienvenido</h2>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-2">
            <img src="/images/{{user.foto}}" class="imgPerfil">
        </div>
        <div class="col-md-10">
            <strong>Usuario: </strong> {{user.nombre}} <br>
            <strong>Email: </strong> {{user.email}} <br>
            <button type="button" class="btn btn-dark btn-sm mt-4" data-toggle="modal" data-target="#modalEditarUsr">
                Editar usuario
            </button>

        </div>
    </div>
    {{! Modal edicion de usuario }}
    <div class="modal fade" id="modalEditarUsr" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Editar usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="p-4 modal-body mx-auto">
                    <div class="row">
                        <form action="/edit/{{user.id}}" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label name="nombre">Nombre: </label> <br>
                                <input type="text" class="form-control" name="nombre" value="{{user.nombre}}" > 
                            </div>

                            <div class="form-group">
                                <label name="email">Email: </label> <br>
                                <input type="text" class="form-control" name="email" value="{{user.email}}" readonly> 
                            </div>

                            <div class="form-group">
                                <label name="password">Password: </label> <br>
                                <input type="password" class="form-control" name="password"> 
                            </div>

                             <div class="form-group">
                                <label name="confirmaPass">Confirma password: </label> <br>
                                <input type="password" class="form-control" name="confirmaPass" > 
                            </div>
                            <div class="form-group">
                                Foto: <input type="file" name="foto" class="form-control">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success d-block w-100 text-center">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>