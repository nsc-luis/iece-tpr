<div class="container mt-4">
    <div class="row">
        <form action="/proyecto/edit/{{proyecto.id}}" method="post">
            <div class="form-group">
                <label for="nombre"><strong>Nombre:*</strong></label>
                <input type="text" name="nombre" required="required" value="{{proyecto.nombre}}" class="form-control" id="">
            </div>
            <div class="form-group">
                <label for="descripcion"><strong>Descripcion:</strong></label>
                <textarea type="text" name="descripcion" required="required" class="form-control summernote" rows="7" style="width: 100%">{{proyecto.descripcion}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success w-100 text-center">Guardar</button>
            </div>
        </form>
    </div>
</div>